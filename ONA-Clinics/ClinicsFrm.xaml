                <materialDesign:PopupBox  Margin="6" Foreground="White" PlacementMode="BottomAndAlignLeftEdges"  StaysOpen="False">

                    <StackPanel >

                        <Button Content="Abdo"/>
                        <Button Content="Abdo"/>

                        <Separator/>
                        <Button Name="SwitchBTN" Click="SwitchBTN_Click"   >
