                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountSwitch" Width="25"  Margin="0,0,5,0" Height="25" Foreground="{DynamicResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Text="تغيير المستخدم" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button Name="LogOutBTN"  Click="LogOutBTN_Click" >
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Shutdown"  Margin="0,0,5,0" Width="25" Height="25" Foreground="{DynamicResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Text="اغلاق" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </materialDesign:PopupBox>
                <TextBlock Text="DMS" VerticalAlignment="Center" FontSize="18"/>
            </StackPanel>

        </Grid>
