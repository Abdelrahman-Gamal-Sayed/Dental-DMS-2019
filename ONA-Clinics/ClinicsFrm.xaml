                    <ComboBox x:Name="cbxServies" materialDesign:HintAssist.Hint="الخدمة " Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="196" DropDownClosed="cbxServies_DropDownClosed" >
                        <TextSearch.TextPath>GROUP_NO</TextSearch.TextPath>
                        <ComboBox.ItemTemplate >
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}  |  {1} ">
                                            <Binding Path="GROUP_NO"/>
                                            <Binding Path="GROUP_ANAME"/>

                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <DataGrid x:Name="dgTotal" Margin="8,260,3,0" VerticalAlignment="Top" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnDelete"   Content="{materialDesign:PackIcon Delete}"  ToolTip="حذف"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>




            </Grid>
            <!-- Foreground="{DynamicResource PrimaryHueMidBrush}" -->


